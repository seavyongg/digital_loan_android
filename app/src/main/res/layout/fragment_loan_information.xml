<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loan Information"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="32dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount"
                android:layout_marginHorizontal="8dp"
                android:textSize="14sp"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextLoanAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:padding="16dp"
                android:background="@drawable/button_round"
                android:enabled="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Duration(Months)"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: 12"
                android:inputType="number"
                android:padding="16dp"
                android:background="@drawable/button_round"
                android:enabled="true"
                />
        </LinearLayout>
    </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroupIncomeType"
            android:paddingHorizontal="8dp"
            >

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbPersonalLoan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/primary"
                android:checked="true"
                android:text="Personal Loan"
                android:layout_marginEnd="8dp"
                />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbBusinessLoan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Business Loan"
                android:layout_marginStart="8dp"/>
        </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:padding="12dp"
            android:backgroundTint="@color/dark_mid"
            android:textColor="@color/light"
            android:text="Back"
            android:textAlignment="center"
            android:layout_marginHorizontal="16dp"
            />
        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:padding="12dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/light"
            android:text="Submit"
            android:textAlignment="center"
            android:layout_marginHorizontal="16dp"/>


    </LinearLayout>



</LinearLayout>